#!/bin/bash

#Generic
HOME_DIR=$1
DOWNLOAD_DIR="$HOME_DIR/islandora/install/downloads"
KARAF_VERSION=3.0.4
KARAF_CLIENT="/opt/karaf/bin/client"
KARAF_CONFIGS="$HOME_DIR/islandora/install/configs/karaf/"
CAMEL_VERSION=4.2.0


BLAZEGRAPH_VERSION=1.5.1
DRUPAL_HOME="/var/www/html/drupal"


#TOMCAT
TOMCAT_VERSION=tomcat7
TOMCAT_HOME=/var/lib/$TOMCAT_VERSION
TOMCAT_LOGS=$TOMCAT_HOME/logs
TOMCAT_LIBS=/usr/share/$TOMCAT_VERSION/lib/
WEBAPPS_DIR=$TOMCAT_HOME/webapps
TOMCAT_CONF=/etc/$TOMCAT_VERSION
TOMCAT_USER=$TOMCAT_VERSION:$TOMCAT_VERSION
FRONTEND_USER=vagrant
TOMCAT_CONTROLLER="service $TOMCAT_VERSION"
TOMCAT_ENV=/etc/default/$TOMCAT_VERSION
JAVA8_HOME=/usr/lib/jvm/java-8-oracle

#SOLR
SOLR_VERSION=4.10.3
SOLR_HOME="$TOMCAT_HOME/solr"

#FEDORA 4
FEDORA_VERSION=4.3.0
FEDORA_DATA=$TOMCAT_HOME/fcrepo4-data